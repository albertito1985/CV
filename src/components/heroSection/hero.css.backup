#hero{
    height:100vh;
    width:100%;
    display:flex;
    align-items: center;
    overflow:hidden;
    position:relative;
}

#hero h1 {
    font-family:'Cinzel Decorative';
    font-size:8rem;
}

.namesUp, .namesDown{
    display:flex;
    flex-direction: row;
    gap:50px;
}

.namesBothlWrap{
    display:flex;
    flex-direction:column;
    gap:30px;
    width:100%;
}

.namesUpWrap, .namesDownWrap{
    width:100%;
    overflow:hidden;
}

.namesUpWrap{
    display:flex;
    justify-content:end;
}

.namesDownWrap{
    display:flex;
    justify-content:baseline;
}

.heroName1,.heroName2{
    white-space: nowrap;
}

h1.heroName1, h1.heroName2{
    margin:0;
}

.nameDisapear{
    opacity:0;
    transition:opacity 2s;
}

#heroVideo{
    position: absolute;
    min-height:100vh;
    min-width:100%;
    z-index:-1;
    overflow:hidden;
}